---
import '@fontsource/architects-daughter';
import Navbar from "../components/Navbar.astro";
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/src/components/icons/GranjaAlfarera.astro" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<div class="container_row">
			<div class="layer1"><Navbar/></div>
			<div class="layer2"><slot /></div>
		</div>
	</body>
</html>


<style is:global>
	:root {
		--accent: 136, 58, 234;
		--accent-light: 224, 204, 250;
		--accent-dark: 49, 10, 101;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-light)) 30%,
			white 60%
		);
	}
	html {
		font-family:'Architects Daughter', cursive, system-ui, sans-serif;
		background: #F8F1E7;
	
	}

	.container_row{
		display:list-item;
		position:relative;
		top:170px;
	}

	.layer1, .layer2{
 		grid-column: 1;
 		grid-row: 1;
	}

    .custom-bg-color{
        background-color:#F5E5D0
    }

    .custom-text{
        color:#76441F
    }
    
</style>
