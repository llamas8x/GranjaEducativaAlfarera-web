---
import GranjaAlfarera from "./icons/GranjaAlfarera.astro";
const navbarItems = [
	{
		name: "Inicio",
		link: "/#inicio",
	},
	{
		name: "Información",
		link: "/#información",
	},
	{
		name: "Plataforma",
		link: "/#plataforma",
	},
];
---

<header
	class="bg-white shadow-md lg:bg-transparent lg:shadow-transparent fixed top-0 z-10 flex lg:justify-between w-full px-5 md:px-20 lg:px-32 items-center py-8"
>
<div class="flex grow justify-center lg:justify-start">
<div class="flex flex-col">
	<div class="flex grow justify-center lg:justify-start">
		<GranjaAlfarera class="size-40 text-primary-200" />
		<h1 class="text-3xl md:text-4xl font-bold text-[#22272B]">
			<a href="/#inicio">
			</a>
		</h1>
	</div>
	
</div>
</div>

	<nav class="hidden text-white grow lg:flex justify-center">
		<ul
			class="flex md:gap-12 py-2 lg:gap-10 bg-[#22272B] border-[#22272B] rounded-full"
		>
			{
				navbarItems.map((item) => (
					<li>
						<a
							aria-label={item.name}
							href={item.link}
							class="hover:bg-[#00E235] hover:text-white px-12 py-2 font-bold rounded-full transition-colors"
						>
							{item.name}
						</a>
					</li>
				))
			}
		</ul>
	</nav>
	<div class="grow lg:justify-end justify-center flex">
		<a
			href="mailto:contacto@alphanex.cl"
			class="border-2 border-[#00E235] bg-transparent px-2 md:px-4 py-2 font-bold rounded-full hover:bg-[#00E235] hover:text-white transition-colors"
			>Contactanos</a
		>
	</div>
</header>